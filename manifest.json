{
  "manifest_version": 3,
  "name": "TabySlap",
  "version": "1.0",
  "description": "Slaps you with a roast when you open too many tabs.",
  "permissions": [ "tabs", "storage", "notifications" ],
  "background": {"service_worker": "background.js"},
  "action": {
    "default_popup": "popup.html", 
    "default_icon": { 
      "16": "icon.png", 
      "48": "icon.png", 
      "128": "icon.png" 
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}


